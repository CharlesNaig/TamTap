# TAMTAP Environment Configuration
# Copy this file to .env and update values as needed

# MongoDB Configuration
MONGODB_URI=mongodb://user:password@mongodbURL/
MONGODB_NAME=tamtap

# API Server Configuration
API_SERVER_PORT=80
API_SERVER_HOST=0.0.0.0

# API URL (for hardware to call)
TAMTAP_API_URL=http://localhost:80

# Session Secret (change this in production!)
SESSION_SECRET=tamtap-session-Secret
